doctype html
html
  script(type='application/ld+json').
    {
    "@context" : "http://schema.org",
    "@type" : "Organization",
    "name" : "Anthropawlogy Veterinary Care",
    "url" : "https://anthropawlogyvet.com/",
    "logo": "https://anthropawlogyvet.com/img/girl_dog_updated_black.png",
    "contactPoint": [
    { "@type": "ContactPoint",
    "telephone": "+1-406-624-9060",
    "contactType": "customer service"
    }
    ],
    "sameAs" : [
    "http://www.facebook.com/anthropawlogyvet",
    "http://instagram.com/anthropawlogyvet"
    ]
    }

  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    meta(name='viewport', content='width=device-width, initial-scale=1.0, maximum-scale=1.0')
    title Anthropawlogy Veterinary Care - Mobile veterinary services in Missoula, MT
    meta(property='og:image', content='/images/brand/fb_tn.jpg')
    meta(property='og:type', content='website')
    meta(property='og:url', content='https://anthropawlogyvet.com')
    meta(content='Anthropawlogy Veterinary Care', property='og:title')
    meta(content='Compassionate veterinary care in the comfort of your home. Veterinary home care, hospice care and home euthanasia.', name='description')
    meta(content='Compassionate veterinary care in the comfort of your home. Veterinary home care, hospice care and home euthanasia.', property='og:description')

    link(rel='icon', type='image/png', href='/images/icon/favicon-32x32.png', sizes='32x32')
    link(rel='icon', type='image/png', href='/images/icon/favicon-16x16.png', sizes='16x16')
    link(rel="shortcut icon" type="image/png" href="/images/icons/atplgylogo.png")
    block css
      link(rel='stylesheet', href='/dist/style.css')
      link(rel='stylesheet', href='https://use.fontawesome.com/releases/v5.0.10/css/all.css')
      link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.css')

    block scripts
      script(src="https://code.jquery.com/jquery-3.2.1.min.js")
      script(src="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.js")
      script(src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js")
      script(src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js")

      script(src="/dist/App.bundle.js")
      script(type='text/javascript').
        (function($) {
        $(document).ready(function(){
        $(window).scroll(function(){
        if ($(this).scrollTop() > 300) {
        $('#menu').fadeIn(200);
        } else {
        $('#menu').fadeOut(200);
        }
        });
        });
        })(jQuery);

  body
    include header


    block messages
      if locals.flashes
        .inner
          .flash-messages
            - const categories = Object.keys(locals.flashes)
            each category in categories
              each message in flashes[category]
                .flash(class=`flash--${category}`)
                  p.flash__text!= message
                  button.flash__remove(onClick="this.parentElement.remove()") &times;

    block content

    include footer

